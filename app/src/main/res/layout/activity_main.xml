<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/etNumero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:ems="10">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNumero1"
        android:layout_alignStart="@+id/etNumero1"
        android:layout_below="@+id/etNumero1"
        android:layout_marginTop="50dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnSumar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNumero2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="Calcular Operaciones"
        android:textColorLink="@android:color/holo_blue_bright" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etNumero1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etNumero2"
        android:layout_alignLeft="@+id/etNumero1"
        android:layout_alignStart="@+id/etNumero1"
        android:layout_marginBottom="40dp"
        android:text="Digite el Primer Numero Entero" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNumero1"
        android:layout_alignStart="@+id/etNumero1"
        android:layout_centerVertical="true"
        android:text="Digite el Segundo Numero Entero" />

</RelativeLayout>